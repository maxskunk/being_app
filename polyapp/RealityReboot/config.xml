<?xml version='1.0' encoding='utf-8'?>
    <widget id="com.zokyamedia.beingapp" version="0.1.2" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
        <name>Reality Reboot</name>
        <description>
            Reality Reboot
        </description>
        <author email="info@zokyamedia.com" href="http://zokyamedia.com">
            Zokya Media
        </author>
        <icon src="res/icon_72.png" />
        <content src="index.html" />
        <plugin name="cordova-plugin-whitelist" spec="1" />
        <plugin name="cordova-plugin-media" />
        <access origin="*" />
        <allow-intent href="http://*/*" />
        <allow-intent href="https://*/*" />
        <allow-intent href="tel:*" />
        <allow-intent href="sms:*" />
        <allow-intent href="mailto:*" />
        <allow-intent href="geo:*" />
        <platform name="android">
            <allow-intent href="market:*" />
        </platform>
        <preference name="orientation" value="portrait" />
        <preference name="FullScreen" value="true" />
        <platform name="ios">
            <!-- iOS 8.0+ -->
            <!-- iPhone 6 Plus  -->
            <icon src="res/ios/icon_180.png" width="180" height="180" />
            <!-- iOS 7.0+ -->
            <!-- iPhone / iPod Touch  -->
            <icon src="res/ios/icon_60.png" width="60" height="60" />
            <icon src="res/ios/icon_120.png" width="120" height="120" />
            <!-- iPad -->
            <icon src="res/ios/icon_76.png" width="76" height="76" />
            <icon src="res/ios/icon_152.png" width="152" height="152" />
            <!-- iOS 6.1 -->
            <!-- Spotlight Icon -->
            <icon src="res/ios/icon_40.png" width="40" height="40" />
            <icon src="res/ios/icon_80.png" width="80" height="80" />
            <!-- iPhone / iPod Touch -->
            <icon src="res/ios/icon_57.png" width="57" height="57" />
            <icon src="res/ios/icon_114.png" width="114" height="114" />
            <!-- iPad -->
            <icon src="res/ios/icon_72.png" width="72" height="72" />
            <icon src="res/ios/icon_144.png" width="144" height="144" />
            <!-- iPhone Spotlight and Settings Icon -->
            <icon src="res/ios/icon_29.png" width="29" height="29" />
            <icon src="res/ios/icon_58.png" width="58" height="58" />
            <!-- iPad Spotlight and Settings Icon -->
            <icon src="res/ios/icon_50.png" width="50" height="50" />
            <icon src="res/ios/icon_100.png" width="100" height="100" />

        </platform>
        <engine name="browser" spec="~4.1.0" />
        <engine name="ios" spec="~4.2.1" />
    </widget>